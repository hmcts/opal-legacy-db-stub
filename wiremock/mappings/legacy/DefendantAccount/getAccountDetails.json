{
  "request": {
    "method": "POST",
    "urlPathPattern": "/opal",
    "queryParameters": {
      "actionType": {
        "equalTo": "getAccountDetails"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": {
          "expression": "$.defendant_account_id",
          "equalTo": "1"
        }
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/xml"
    },
    "bodyFileName": "legacy/DefendantAccount/getAccountDetails.xml"
  }
}
