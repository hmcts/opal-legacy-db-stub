{
  "request": {
    "method": "POST",
    "urlPathPattern": "/opal",
    "queryParameters": {
      "actionType": {
        "equalTo": "searchDefendantAccounts"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": {
          "expression": "defendant.postcode",
          "equalTo": "AB1 2CD"
        }
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/xml"
    },
    "bodyFileName": "legacy/DefendantAccount/searchDefendantAccounts.xml"
  }
}
