{
  "request": {
    "method": "POST",
    "urlPathPattern": "/opal",
    "queryParameters": {
      "actionType": {
        "equalTo": "LIBRA.get_minor_creditors_account_at_a_glance"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": {
          "expression": "$.creditorAccountId",
          "equalTo": "1"
        }
      }
    ]
  },

  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/xml"
    },
    "bodyFileName": "legacy/MinorCreditor/getMinorCreditorAtAGlance.xml"
  }
}
